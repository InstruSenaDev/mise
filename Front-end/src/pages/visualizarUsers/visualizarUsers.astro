---
import NavBar from "../../components/nav/NavBar.astro";
import LayoutDashboard from "../../layouts/LayoutDashboard.astro";
import Boton from "../../components/inputs/boton.astro";
import iconGB from "../../images/icons/iconsEditUser/GoBack.png";
import Input3 from "../../components/inputs/input3.astro";
import TablasUsers from "../../components/tablas/tablasUsers.astro";
import SideBar from "../../components/nav/sideBar.astro";
---

<LayoutDashboard title="Editar Usuario">
  <main class="flex flex-row w-full bg-greyBlack h-screen">
    <SideBar condicion={1} />
    <div class="flex flex-col w-full h-full">
      <div
        class="bg-greyBlack flex content-center pr-5 justify-end h-20 w-full"
      >
      </div>
      <div class="bg-greyBg flex flex-col px-8 py-5 h-full w-full">
        <div class="bg-greyBlack gap-8 flex flex-col p-8 w-full rounded-md">
          <div class="overflow-auto rounded-xl flex flex-col gap-3">
            <di
              class="flex flex-row items-center p-2 gap-4 text-left justify-start text-sm"
            >
              <div class="flex flex-row justify-start items-center w-[50rem]">
                <p class="text-white font-bold text-xl">Usuarios Registrados</p>
                
              </div>
              
              <div class="flex items-center gap-10">
                <div>
                  <input
                  type="text"
                  placeholder=""
                  class="border w-[20rem] border-white rounded-lg bg-greyBlack p-1"
                />
                <i class="fa-solid fa-magnifying-glass text-white pl-2"></i>
                </div>
                
                <div
                  class="items-center flex gap-4 border-2 rounded-lg border-white bg-transpsrent text-white text-left p-2 pr-3 pl-3"
                >
                  <p>Coordinador</p>
                  <i class="fa-solid fa-filter"></i>
                </div>
              </div>
            </di>
            <div class="rounded-xl">
              <TablasUsers />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</LayoutDashboard>
