---
import NavBar from "../../components/nav/NavBar.astro";
import LayoutDashboard from "../../layouts/LayoutDashboard.astro";
import Boton from "../../components/inputs/boton.jsx";
import iconGB from "../../images/icons/iconsEditUser/GoBack.png";
import Input3 from "../../components/inputs/input3/input3.jsx";
import TablasUsers from "../../components/tablas/tablasUsers.astro";
import SideBar from "../../components/nav/sideBar.astro";
---

<LayoutDashboard title="Editar Usuario">
  <main class="flex flex-row w-full bg-greyBlack h-screen">
    <SideBar condicion={1} />
    <div class="flex flex-col w-full h-full ">
      <div
        class=" flex content-center   justify-end h-20 w-full"
      >
      </div>
      <div class="bg-greyBg flex flex-col  h-full w-full px-12 pt-6">
        <div class=" gap-8 flex flex-col p-8  w-full rounded-md">
          <div class="overflow-auto rounded-xl flex flex-col gap-6">
            <div
              class="flex flex-col items-center p-2 text-left text-sm w-full gap-4"
            >
              <div class="flex flex-row justify-start items-center w-full">
                <p class="text-white font-bold text-2xl">Usuarios Registrados</p>
                
              </div>
              
              <div class="flex items-center w-full  gap-10">
                <div>
                  <input
                  type="text"
                  placeholder=""
                  class="border w-[20rem] border-white rounded-lg bg-transparent p-1"
                />
                <i class="fa-solid fa-magnifying-glass text-white pl-2"></i>
                </div>
                
                <div
                  class="items-center flex gap-4 border-2 rounded-lg border-white bg-transparent text-white text-left p-2 pr-3 pl-3"
                >
                  <p>Coordinador</p>
                  <i class="fa-solid fa-filter"></i>
                </div>
              </div>
            </div>
            <div class="max-h-[25rem] overflow-y-auto custom-scrollbar rounded-xl">
              <TablasUsers />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</LayoutDashboard>
