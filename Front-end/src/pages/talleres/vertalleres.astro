---
import Logo from "../../components/logo.astro";
import NavBar from "../../components/nav/NavBar.astro";
import LayoutDashboard from "../../layouts/LayoutDashboard.astro";
import Modal from "../../components/modales/modal.astro";
import Modal1 from "../../components/modales/modal1.astro";
import Aadirmodulo from "../../components/modales/añadirmodulo.astro";
import Modalopciones from "../../components/modales/modalopciones.astro";
import Modaltaller from "../../components/modales/modaltaller.astro";
import SideBar from "../../components/nav/sideBar.astro";
import Boton from "../../components/inputs/boton.astro";
---

<LayoutDashboard title="talleres">
    <main class="flex flex-row w-full bg-greyBlack h-screen">
        <SideBar condicion={1} />
        <div class="flex flex-col w-full h-full">
            <div
                class="bg-greyBlack flex content-center pr-5 pt-3.5 justify-end h-20 w-full"
            >
            <Boton />
            </div>
            <div class="bg-greyBg flex flex-col px-8 py-5 h-full w-full">
                <div class="pb-1">
                    <p class="text-2xl text-white">Talleres</p>
                </div>  
                        <div class="left flex flex-row gap-5 p-1">
                            <div
                                class="container w-full max-h-[50rem] bg-greyBlack rounded-xl p-8 overflow-y-auto custom-scrollbar"
                            >
                            <div class="flex flex-wrap gap-10 items-center">
                                <Modaltaller texto={"CAPACIDADES GERENCIALES"} />
                                <Modaltaller texto={"MEJORA DE OPERACIONES"} />
                                <Modaltaller texto={"GERENCIA DE MARKETING"} />
                                <Modaltaller texto={"GERENCIA DE VENTAS"} />
                                <Modaltaller texto={"GERENCIA DE TALENTO HUMANO"} />
                                <Modaltaller texto={"FINANZAS GERENCIALES"} />
                                <Aadirmodulo />
                            </div>
                            </div>

            <div class="w-8/12 flex text-white ">
                <div class="left w-full flex flex-col p-7 justify-center gap-16 ">
                    <Modalopciones texto={"Sueños"} />
                    <Modalopciones texto={"Preguntas"} />
                    <Modalopciones texto={"Talleres"}/>
                </div>
            </div>
        </div>
    </main>
</LayoutDashboard>



