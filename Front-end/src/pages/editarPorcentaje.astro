---
import NavBar from "../components/nav/NavBar.astro";
import LayoutDashboard from "../layouts/LayoutDashboard.astro";
import Boton from "../components/inputs/boton.astro";
import iconGB from "../images/icons/iconsEditUser/GoBack.png";
---

<LayoutDashboard title="Editar Usuario">
  <main class="flex flex-row w-full bg-greyBlack h-screen">
    <NavBar />
    <div class="flex flex-col w-full h-full">
      <div
        class="bg-greyBlack flex content-center pt-4 pr-5 justify-end h-20 w-full"
      >
        <Boton />
      </div>
      <div class="bg-greyBg flex flex-col px-10 h-full w-full">
        <div class="flex flex-row gap-3 text-textBg pt-3 pb-3 font-semibold">
          <img src={iconGB.src} alt="" />
          <p class="">Editar Porcentajes</p>
        </div>
        <div class="bg-greyBlack flex flex-col px-10 w-full rounded-md"></div>
      </div>
    </div>
  </main>
</LayoutDashboard>
