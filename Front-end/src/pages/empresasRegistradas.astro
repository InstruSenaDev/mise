---
import Logo from "../components/logo.astro";
import NavBar from "../components/nav/NavBar.astro";
import LayoutDashboard from "../layouts/LayoutDashboard.astro";
import Modal1 from "../components/modales/modal1.astro";
import SideBar from "../components/nav/sideBar.astro";
import { Elementosempresas } from "../helpers/elementsempresas";
import TarjetasEmpresasreg from "../components/tarjetasdashboard/tarjetasEmpresasreg.astro";
import TablasEmpresas from "../components/tablas/tablasEmpresas.astro";
import TarjetasModulos from "../components/tarjetasdashboard/tarjetasModulos.astro";
---

<LayoutDashboard title="Dashboard">
  <main class="bg-greyBg flex flex-row w-full h-full pb-5 relative z-0 overflow-x-hidden">
    <div class="flex flex-row">
      <SideBar condicion={1} />
      <div class="w-full h-full">
        <div class="bg-greyBlack  h-20 "></div>
        <div class="flex w-full justify-center">
          <div class="w-screen justify-start h-full flex text-white gap-5">
            <div class=" flex flex-col">
              <div class="pt-5">
                <p class="text-2xl pl-4">Empresas registradas</p>
              </div>

              <div class="flex gap-6 text-sm p-3 pl-3">
                {
                  Elementosempresas.map((Elementosempresas, index) => (
                      <TarjetasEmpresasreg
                          empresaicon={Elementosempresas.empresaicon}
                          tipoTarjeta={Elementosempresas.tipoTarjeta}
                          numeroEmpresas={Elementosempresas.numeroEmpresas}
                      />
                  ))
              }
              </div>

              <div class="flex flex-row gap-7 pl-3 pr-3 w-full justify-center">
                <div class="container bg-greyBlack rounded-xl p-7">
                  <div
                    class="flex items-center p-3 gap-4 text-left justify-end text-sm"
                  >
                    <input
                      type="text"
                      placeholder=""
                      class="border border-white rounded-lg bg-greyBlack -m-2 p-1"
                    />
                    <i class="fa-solid fa-magnifying-glass text-white"></i>
                    <div class="flex items-center">
                      <div
                        class="items-center flex gap-4 border-2 rounded-lg border-white bg-transpsrent text-white text-left p-2 pr-3 pl-3"
                      >
                        <p>Mas nuevas</p>
                        <i class="fa-solid fa-filter"></i>
                      </div>
                    </div>
                  </div>
                  <div class="overflow-auto rounded-xl">
                    <div class="">
                      <TablasEmpresas />
                    </div>
                  </div>
                </div>
                <div
                  class="flex flex-col justify-center align-middle bg-darkslategray rounded-lg w-[21.5rem] h-full"
                >
                  <TarjetasModulos tipoTarjeta="General" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Capacidades Gerenciales" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Mejora de Operaciones" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Gerencia de Marketing" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Gerencia de Ventas" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Gerencia de Talento Humano" moduloicon="fa-table-cells" />
                  <TarjetasModulos tipoTarjeta="Financias Gerenciales" moduloicon="fa-table-cells" />
                  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</LayoutDashboard>
