---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/logo.astro";
import InputText from "../components/inputs/InputText.astro";
---

<Layout title="Registro Persona">
    <main>
        <div
            class="flex flex-row gap-5 h-full w-full absolute z-10 bg-black bg-opacity-60"
        >
        </div>
        <div class="flex flex-col">
            <img
                src="../src/images/loginImg/bg.jpg"
                alt=""
                class="w-full h-full fixed z-0"
            />
        </div>

        <div
            class="all relative z-20 flex gap-10 h-screen items-center justify-center px-10 pl-80 pr-80"
        >
            <div
                class="register-container text-white w-full h-full
          flex flex-col justify-center gap-5 text-center"
            >
                <p class="font-bold text-3xl text-left">Registro Empresa</p>
                <form action="" class="form flex flex-col gap-6 ">
                    <InputText
                        inputType="text"
                        inputPlaceholder="Posicion Empresarial"
                    />
                    <InputText
                        inputType="text"
                        inputPlaceholder="Nivel de Educacion del Postulante"
                    />
                    <InputText
                        inputType="text"
                        inputPlaceholder="Producto o Servicio"
                    />
                    <InputText
                        inputType="date"
                        inputPlaceholder="Dia de inicio de la empresa"
                    />
                    <InputText inputType="number" inputPlaceholder="Celular" />
                </form>
            </div>

            <div
                class="register-container text-white w-full h-full
          flex flex-col justify-center gap-5 text-center pt-[5.3rem]"
            >
                <div class="flex justify-end">
                    <svg
                        fill="#ffffff"
                        height="50px"
                        width="50px"
                        version="1.1"
                        id="Layer_1"
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        viewBox="-51.2 -51.2 614.40 614.40"
                        xml:space="preserve"
                        stroke="#ffffff"
                        ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
                            id="SVGRepo_tracerCarrier"
                            stroke-linecap="round"
                            stroke-linejoin="round"></g><g
                            id="SVGRepo_iconCarrier"
                        >
                            <g>
                                <g>
                                    <path
                                        d="M256,0C114.837,0,0,114.837,0,256s114.837,256,256,256s256-114.837,256-256S397.163,0,256,0z M384,277.333H179.499 l48.917,48.917c8.341,8.341,8.341,21.824,0,30.165c-4.16,4.16-9.621,6.251-15.083,6.251c-5.461,0-10.923-2.091-15.083-6.251 l-85.333-85.333c-1.963-1.963-3.52-4.309-4.608-6.933c-2.155-5.205-2.155-11.093,0-16.299c1.088-2.624,2.645-4.971,4.608-6.933 l85.333-85.333c8.341-8.341,21.824-8.341,30.165,0s8.341,21.824,0,30.165l-48.917,48.917H384c11.776,0,21.333,9.557,21.333,21.333 S395.776,277.333,384,277.333z"
                                    ></path>
                                </g>
                            </g>
                        </g></svg
                    >
                </div>

                <form action="" class="form flex flex-col gap-6">
                    <InputText
                        inputType="text"
                        inputPlaceholder="Razon Social"
                    />
                    <InputText inputType="number" inputPlaceholder="NIT" />
                    <InputText
                        inputType="number"
                        inputPlaceholder="Numero de Empleados Permanentes"
                    />
                    <InputText
                        inputType="number"
                        inputPlaceholder="Total de Ventas del año anterior"
                    />
                    <InputText
                        inputType="number"
                        inputPlaceholder="Total de Gastos y Costo del año anterior"
                    />
                </form>
                <div class="flex justify-center pt-8">
                    <button
                        class="bg-principalGreen px-6 py-2 font-bold text-2xl rounded-lg"
                    >
                        Postular
                    </button>
                </div>
            </div>
        </div>
    </main>
</Layout>
