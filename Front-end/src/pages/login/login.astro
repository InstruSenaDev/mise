---
import Layout from "../../layouts/Layout.astro";
import Logo from "../../components/logo.astro";
import InputText from "../../components/inputs/InputText.astro";
import Formlogin from "../../components/forms/formslogin.jsx";
---

<Layout title="Iniciar Sesion">
  <main>
    <div class="h-full w-full absolute z-10 bg-black bg-opacity-60"></div>
    <img
      src="../src/images/loginImg/bg.jpg"
      alt=""
      class="w-full h-full fixed z-0"
    />
    <div
      class="all relative z-20 flex h-screen items-center justify-center gap-0"
    >
      <div class="w-full h-full">
        <div class="flex w-full h-full items-center justify-center">
          <Logo />
        </div>
      </div>
      <div
        class="login-container text-white w-full h-full
      flex flex-col justify-center pr-40 gap-12 text-center"
      >
        <p class="font-bold text-3xl">Iniciar Sesion</p>

        <Formlogin client:visible />
        
      </div>
    </div>
  </main>
</Layout>