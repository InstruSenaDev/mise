---
import Layout from "../layouts/Layout.astro";
import Logo from "../components/logo.astro";
---

<Layout title="MISE">
  <main>
    <div class="container">
      <div class="logo w-96 h-96 bg-principalGreen">
        <Logo width={"15"} height={"15"}/>
      </div>
    </div>
    <div class="login-container bg-grey">
      <p>Iniciar Sesion</p>
      <p>Inicia sesion</p>
      <form action="" class="form">
        <input type="email" name="email" id="1" />
        <input type="password" name="password" id="2" />
        <input type="checkbox" name="showpassword" id="3" />
      </form>
      <button> Iniciar sesion </button>
    </div>
  </main>
</Layout>
