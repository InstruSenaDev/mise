---
import Logo from "../components/logo.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dashboard">
  <main class="bg-greyBg w-screen h-screen relative z-0">
    <div class="bg-greyBlack fixed top-0 h-[10%] w-full z-0"></div>

    <div class="h-screen flex top-0 z-10">
      <div class="bg-greyBlack sticky top-0 h-full w-[15%] ">
        <div class="flex flex-col w-full h-full ">
          <div class="bg-transparent w-full h-64 flex items-center px-6">
            <Logo />
          </div>
          <div class="nav-items flex flex-col bg-greyBlack w-full h-full">
            <div class="flex flex-col gap-5 p-10">
              <p class="text-textBg font-medium">Dashboard</p>
              <p class="text-textBg font-medium">Empresas Registradas</p>
              <p class="text-textBg font-medium">Diagnostico</p>
            </div>
            <div class="line bg-white w-full h-[0.1px]"></div>
          </div>
        </div>
      </div>
      <div class="w-full h-full z-20 p-7 gap-y-7 gap-x-5 grid grid-cols-10 relative top-24">
        <div class="container bg-greyBlack rounded-xl col-span-6">
          
        </div>
        <div class="container bg-greyBlack rounded-xl col-span-4">
          
        </div>
        <div class="container bg-greyBlack rounded-xl col-span-6">
          
        </div>
        <div class="container bg-greyBlack rounded-xl col-span-4">
          
        </div>
      </div>
    </div>
  </main>
</Layout>
