---
interface Props {
  icon: string;
  texto: string;
}

const { icon, texto } = Astro.props;
---
<div class="flex flex-row pl-6 justify-start items-center align-middle rounded-md gap-3 cursor-pointer hover:text-white group hover:bg-principalGreen">
  <div class="w-[60px] h-[44px] flex justify-center items-center">
    <i class={`text-2xl text-textBg ${icon}`}></i>
  </div>
  <span class="font-semibold text-colortextsecondary pt-1.5 group-hover:text-white hidden">{texto}</span>
</div>