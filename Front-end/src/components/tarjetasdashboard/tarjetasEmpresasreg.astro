---

import { Elementosempresas } from '../../helpers/elementosempresas';

interface Props {
  numeroEmpresas: number;
  tipoTarjeta: string;
  empresaicon: string
  URL: string
}
const { numeroEmpresas, tipoTarjeta, empresaicon, URL } = Astro.props;
---

<a href={URL} class="container bg-greyBlack rounded-xl p-8 cursor-pointer hover:bg-principalGreen hover:scale-105 transition-all">
  <div class="flex flex-row">
    <i class=`fa-solid ${empresaicon} text-4xl`></i>
    <p class="pl-2 text-4xl">{numeroEmpresas}</p>
  </div>
  <p class="mt-3 text-xl">{tipoTarjeta}</p>
</a>