---
interface Props {
  tipoTarjeta: string;
  moduloicon: string
}

const { tipoTarjeta, moduloicon } = Astro.props;
---


<div class="py-4 px-5 justify-start">
    <div class="flex flex-row px-3 py-4  gap-3 rounded-lg hover:bg-principalGreen transition-all duration-150 ease-in-out">
        <i class=`fa-solid ${moduloicon} text-2xl`></i>
    <p class="text-white pt-0.5 text-sm">{tipoTarjeta}</p>
    </div>
</div>