---
interface Props {
  inputType: string;
  inputPlaceholder: string;
  DataType: string;
  width: string;
  widthInput: string;
}

const { inputType, inputPlaceholder, DataType, width, widthInput } = Astro.props;
---

<style type="text/css">
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    input[type="number"] {
      -moz-appearance: textfield;
    }
  </style>

<div class="text-textBg items-center text-left content-center flex flex-row">
    <div class={width}>
        <p class="font-semibold">{DataType}</p>
    </div>
    <div>
        <input class=`border ${widthInput} h-10 rounded-md peer border-solid border-white bg-transparent placeholder:pl-2`
       placeholder={inputPlaceholder} 
       type={inputType}
    />
    </div>
    
</div>