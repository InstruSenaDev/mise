---
interface Props {
  inputType: string;
  inputPlaceholder: string;
  DataType: string;
}

const { inputType, inputPlaceholder, DataType } = Astro.props;
---

<style type="text/css">
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    input[type="number"] {
      -moz-appearance: textfield;
    }
  </style>

<div class="text-textBg items-center text-left content-center flex flex-row">
    <div class="w-80">
        <p>{DataType}</p>
    </div>
    <div>
        <input class="border w-80 h-12 rounded-md peer border-solid border-white bg-transparent placeholder:pl-2"
       placeholder={inputPlaceholder} 
       type={inputType}
    />
    </div>
    
</div>