             </div>
             <div class="flex flex-row items-center text-start content-center h-[4rem]">
              <p class="font-semibold text-textBg w-[10rem]">Modulo</p>
              <p class="w-[17rem] text-textBg font-semibold">CAPACIDADES GERENCIALES</p>
             </div>
          </div>
      </div>
      <div
          class="container flex-col bg-greyBlack rounded-xl gap-3 text-center p-5 flex justify-center items-start"
      >
          <p class="text-xl h-5 pb-10 text-white">Editar Pregunta</p>
          <div class="flex flex-col justify-center items-center gap-6">
              <TextareaHero DataType="Pregunta" height="h-[4rem]" width="w-[10rem]" widthInput="w-[17em]" />
              <Input3 DataType="Modulo" inputPlaceholder="CAPACIDADES GERENCIALES" inputType="text" height="h-[4rem]" width="w-[10rem]" widthInput="w-[17rem]" additionalClass=""/>
          </div>
      </div>
    </div>
  )}

{condicion === 6 && (
    // Nueva Preguntas
    <div class="flex flex-col gap-3">
      <div
          class="container flex-col bg-greyBlack rounded-xl gap-3 text-center p-5 flex justify-center items-start"
      >
