---
interface Props {
    texto? : string;
}

const {texto} = Astro.props
---


<div class="flex flex-col gap-3">
    <p class="text-xl text-white">{texto}</p>
    <div class="container bg-greyBlack rounded-xl  gap-3 text-center h-40 flex justify-center items-center">
    <div class="flex justify-center items-center">
        <button
          class="p-3 pl-4 pr-5 w-44 border-principalGreen bg-principalGreen tracking-wide font-semibold text-lg transition-colors duration-150 transform border-solid rounded-lg hover:bg-white text-white hover:text-principalGreen hover:border-white hover:border-solid border ">
          <p class=" hover:text-principalGreen">Ver {texto}</p>
        </button>
      </div>
    </div>
</div>