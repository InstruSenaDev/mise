---
interface Props {
    texto? : string;
    colorborde : string;
    colorhover : string;
}

const {texto, colorborde, colorhover} = Astro.props

---


<div class=`flex w-60 h-60 custom-scrollbar border ${colorborde} rounded-xl justify-center items-center text-sm uppercase p-12 overflow-hidden ${colorhover} ease-in duration-150`>
    <p class="text-center font-semibold text-white"> {texto}  </p>
</div>
