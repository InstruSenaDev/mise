---
import Layout from "../../layouts/Layout.astro";
import FormsRegistro from "../../components/forms/formsregistroemp/formsregistroemp.jsx";
import Logo from "../../components/logo.astro";
---

<Layout title="Registro Empresa">
    <main>
        <div class="h-full w-full absolute z-10 bg-black bg-opacity-60"></div>
        <div class="flex flex-col">
            <img
                src="../src/images/loginImg/bg.jpg"
                alt=""
                class="w-full h-full fixed z-0"
            />
        </div>

        <div
            class="all relative z-20 flex h-screen items-center justify-center gap-0 py-3"
        >
            <div
                class="register-container text-white w-full h-full
          flex flex-col justify-center pl-28 gap-5 text-center"
            >
                <FormsRegistro client:visible />
            </div>

            <div class="flex w-full h-full items-center justify-center">
                <Logo />
            </div>
        </div>
    </main>
</Layout>
